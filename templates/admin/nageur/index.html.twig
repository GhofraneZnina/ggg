{% extends "base.html.twig" %}
{% block title %}Liste des nageurs{% endblock %}
{% block pageTitle %}Liste des nageurs{% endblock %}
{% block levelOne %}
    <li class="breadcrumb-item"><a href="{{ path('app_admin_nageur_list') }}">nageurs</a></li>{% endblock %}
{% block levelTwo %}{% endblock %}
{% block levelThree %}{% endblock %}
{% block btnLink %}
    <div class="col s2 m6 l6">
        <a class="btn  waves-effect waves-light breadcrumbs-btn right" href="{{ path('app_admin_nageur_create') }}">
            Create nageur</a>
    </div>
{% endblock %}

{% block body %}
    {#  Show alert : START #}
    {% for message in app.flashes('success') %}
        <div class="card-alert card green">
            <div class="card-content white-text">
                <p>  {{ message }}</p>
            </div>
            <button type="button" class="close white-text" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">×</span>
            </button>
        </div>
    {% endfor %}
    {% for message in app.flashes('error') %}
        <div class="card-alert card red">
            <div class="card-content white-text">
                <p>  {{ message }}</p>
            </div>
            <button type="button" class="close white-text" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">×</span>
            </button>
        </div>
    {% endfor %}
    {#  Show alert : END  #}
    <section class="nageurs-list-wrapper section">
        <div class="nageurs-list-filter">
            <div class="card-panel">
                <div class="row">
                    <form>
                        <div class="col s12 m6 l3">
                            <label for="nageurs-list-verified">Verified</label>
                            <div class="input-field">
                                <select class="form-control" id="nageurs-list-verified">
                                    <option value="">Any</option>
                                    <option value="Yes">Yes</option>
                                    <option value="No">No</option>
                                </select>
                            </div>
                        </div>
                        <div class="col s12 m6 l3">
                            <label for="nageurs-list-role">Role</label>
                            <div class="input-field">
                                <select class="form-control" id="nageurs-list-role">
                                    <option value="">Any</option>
                                    <option value="nageur">nageur</option>
                                    <option value="Staff">Staff</option>
                                </select>
                            </div>
                        </div>
                        <div class="col s12 m6 l3">
                            <label for="nageurs-list-status">Status</label>
                            <div class="input-field">
                                <select class="form-control" id="nageurs-list-status">
                                    <option value="">Any</option>
                                    <option value="Active">Active</option>
                                    <option value="Close">Close</option>
                                    <option value="Banned">Banned</option>
                                </select>
                            </div>
                        </div>
                        <div class="col s12 m6 l3 display-flex align-items-center show-btn">
                            <button type="submit" class="btn btn-block indigo waves-effect waves-light">Show</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="nageues-list-table">
            <div class="card">
                <div class="card-content">
                    <!-- datatable start -->
                    <div class="responsive-table">
                        <table id="nageurs-list-datatable" class="table">
                            <thead>
                            <tr>
                                <th></th>
                                <th>id</th>
                                <th>Prenom</th>
                                <th>Nom</th>
                                <th>Telephone</th>
                                <th>Email</th>
                                <th>Login</th>
                                <th>Facebook</th>
                                <th>status</th>
                                <th>date_debut_activite_sportive</th>
                                <th>remarque</th>
                                <th>date_naissance</th>
                            
                                
                            </tr>
                            </thead>
                            <tbody>
                            {% for nageur in nageurs %}
                                <tr>
                                    <td></td>
                                     <td>{{ nageur.id }}</td>
                                    <td>{{ nageur.prenom }}</td>
                                    <td>{{ nageur.nom }}</td>
                                    <td>{{ nageur.telephone }}</td>
                                    <td>{{ nageur.email }}</td>
                                    <td>{{ nageur.profileFacebook }}</td>
                                    {% if nageur.status == 1 %}
                                    <td><span class="chip green lighten-5"> <span class="green-text">Active</span> </span> </td>
                                    {% else %}
                                        <td><span class="chip red lighten-5"> <span class="green-text">Disable</span> </span> </td>
                                    {% endif %}
                                    <td>{{ nageur.typeEtablissement }}</td>
                                    <td>{{ nageur.dateNaissance|date('Y-m-d')}}</td>
                                    
                                    
                                    <td>
                                        <a href="page-nageurs-view.html"><i class="material-icons">remove_red_eye</i></a>
                                        <a href="{{ path('app_admin_nageur_edit',{'id': nageur.id}) }}"><i class="material-icons">edit</i></a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <!-- datatable ends -->
                </div>
            </div>
        </div>
    </section>
{% endblock %}
